{
  "name": "<%= moduleName %>",
  "version": "0.0.0",
  "description": "<%= moduleDescription %>",
  "license": "MIT",
  "repository": "<%= githubUsername %>/<%= repoName %>",
  "author": "<%= name %> <<%= email %>> <%= humanizedWebsite %> ",<% if (cli) { %>
  "bin": "cli.js",<% } %>
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "test": "npm run lint && <% if (nyc) { %>nyc <% } %>ava --verbose",
		"lint": "tslint --project ./tsconfig.json --fix",
		"start": "tsc -w",
		"pretest": "tsc"
  },
	"typings": "index.d.ts",
  "keywords": [<% if (cli) { %>
    "cli-app",
    "cli",<% } %>
    ""
  ],
  "dependencies": {
		"tslib": "^1.6.0"<% if (cli) { %>,
    "meow": "^3.7.0"
  <% } %>
	},
  "devDependencies": {
		"@types/node": "^7.0.8",
    "ava": "^0.18.2",
    "tslint": "^4.5.1",
    "tslint-eslint-rules": "^3.5.1",
    "typescript": "^2.2.1"<% if (coveralls) { %>,
    "coveralls": "^2.11.12",<% } %><% if (nyc) { %>
    "nyc": "^10.0.0"<% } %>
  }<% if (coveralls) { %>,
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  }<% } %>
}
